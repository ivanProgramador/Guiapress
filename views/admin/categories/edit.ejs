<%- include('../../partials/header.ejs') -%>
<%- include('../../partials/navbar.ejs') -%>

<div class="container">
    <hr>
    <div class="card">
        
        <div class="card-header">
            <h2 class="card-title">Edição de categoria</h2>
        </div>
        <div class="card-body">
            <form class="form" action="/categories/update" method="post">
                <input type="hidden" value="<%= category.id %>" name="id">
                <input value="<%= category.title %>" class="form-control" type="text" name="title" placeholder="defina uma categoria">
                <button class="btn btn-success mt-3" type="submit">Atualizar</button>
            </form>
        </div>
    </div>
</div>



