<%- include('../../partials/header.ejs') -%>
<%- include('../../partials/navbar.ejs') -%>
<div class="container">
    <hr>
      <h2>Usuários</h2>
      <a class="btn btn-success" href="/admin/users/new" >Adicionar novo usuário</a>
    <hr>
    <table class=" table table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Email
                </th>
                <th>
                    senha
                </th>
                <th>
                    Ações
                </th>

            </tr>
        </thead>

        <tbody>
           <% users.forEach(user=>{ %>
               
              <tr>
                
                 <td><%= user.id %></td>
                 <td><%= user.email %></td>
                 <td><%= user.password %></td>
                 <td>
                    <a href="/admin/user/edit/<%= user.id %>" class="btn btn-warning">Editar</a>

                    <form action="/user/delete" style="display: inline;" method="post" onsubmit="confirmarDelecao(event,this)">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                  
                 </td>
              </tr>

           <% }) %>
            <tr>
                
            </tr>

        </tbody>
    </table>
   
</div>
<%- include('../../partials/footer.ejs') -%>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Deseja deletar esse usuarios ?");
        if(decision){
            form.submit();
        }

    }
</script>